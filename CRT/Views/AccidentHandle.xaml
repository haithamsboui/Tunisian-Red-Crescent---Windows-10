<Page
    x:Class="CRT.Views.AccidentHandle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CRT.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton Icon="Accept" Label="appbarbutton" Click="AppBarButton_Click"/>
            <AppBarButton Icon="Cancel" Label="appbarbutton" Click="AppBarButton_Click_1"/>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="#FFD32F2F" Margin="0,65,-5,-10">
        <StackPanel HorizontalAlignment="Left" Height="630" VerticalAlignment="Top" Width="345" Margin="10,10,0,0">
            <Image x:Name="image" Height="295" VerticalAlignment="Top" Margin="10,0,10,10" Source="ms-appx:///Assets/no-image-icon.jpg"/>
            <TextBlock x:Name="text_description" TextWrapping="Wrap" Text="Description" Height="250" Margin="10,0"/>
        </StackPanel>

    </Grid>
</Page>
